		drawPanel = new MapDrawPanel();
		drawPanel.setBorder(new LineBorder(new Color(0, 0, 0)));
		GridBagConstraints gbc_drawPanel = new GridBagConstraints();
		gbc_drawPanel.gridheight = 19;
		gbc_drawPanel.insets = new Insets(0, 0, 5, 5);
